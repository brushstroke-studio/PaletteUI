---
import Layout from "@/layouts/Layout.astro";
import Sidebar from "@/components/docs/sidebar";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Documentation - Palette UI",
  description = "Documentation for Palette UI - A Modern UI Component Library",
} = Astro.props;
---

<Layout title={title} description={description}>
  <div
    class="flex-1 items-start md:grid md:grid-cols-[200px_minmax(0,1fr)] md:gap-6 lg:grid-cols-[200px_minmax(0,1fr)] w-screen relative"
  >
    <aside
      class="hidden md:block md:sticky top-14 z-30 overflow-y-auto h-screen bg-white/5"
    >
      <Sidebar client:load />
    </aside>

    <main class="relative py-6 w-[calc(100%-200px)] flex justify-center">
      <div class="max-w-3xl lg:gap-10">
        <slot />
      </div>
    </main>
  </div>
</Layout>
